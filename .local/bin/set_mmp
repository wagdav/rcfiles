#!/usr/bin/env python
""" Set different multi-media profiles """
import sys
import subprocess

def print_usage():
    """ Print short help """
    print "set_mmp <profile_name>"


def set_profile(name):
    """ Set the profile to `name` """
    if name == 'hdmi':
        print 'setting profile hdmi'
        subprocess.call('xrandr --output HDMI1 --auto --above LVDS1',
                        shell=True)
        subprocess.call('pactl set-card-profile 0 output:hdmi-stereo'
                        '+input:analog-stereo', shell=True)

    elif name == 'standalone':
        print 'setting profile standalone'
        subprocess.call('xrandr --output HDMI1 --off --output LVDS1 --auto',
                        shell=True)
        subprocess.call('pactl set-card-profile 0 output:analog-stereo'
                        '+input:analog-stereo', shell=True)
    else:
        print 'Unknown profile.'


def main(args):
    """ The main function. """
    if len(args) < 2:
        print_usage()
    else:
        set_profile(args[1])

if __name__ == '__main__':
    main(sys.argv)
