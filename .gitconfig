[user]
    name = David Wagner
    email = david.wagner@nexthink.com
    signingkey = ~/.ssh/id_signing

[color]
    diff = auto
    status = auto
    branch = auto
    diff-tree = auto
[alias]
    wdiff = diff --color-words
    lg = log --decorate
    review = log --decorate -p -C
    ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
    exec = "!exec "
[core]
    excludesfile = ~/.gitignore_global
	pager = less -r
[color "diff"]
	whitespace = red reverse
[push]
	default = simple
[rerere]
	enabled = 1
[diff]
	submodule = log
[pull]
	rebase = true
[branch]
	sort = authordate
[init]
	defaultBranch = main
[commit]
    gpgsign = true
[gpg]
    format = ssh
[gpg "ssh"]
    allowedSignersFile = ~/.ssh/allowed_signers
